<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginHorizontal="18dp">
    <android.support.design.widget.TabLayout
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:id="@+id/fragment_home_tl"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorBackground"
        app:tabIndicatorColor="@color/colorBackground"
        app:tabIndicatorHeight="0dp">
    </android.support.design.widget.TabLayout>
    <FrameLayout
        android:id="@+id/fragment_custom_fl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </FrameLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="5.5dp"
        android:layout_below="@+id/fragment_custom_condition_notclick_rl_custom_custom">
        <TextView
            android:id="@+id/fragment_custom_condition_notclick_tv_listsize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanumsquarer"
            android:text="총 46건"
            android:textSize="12sp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">
            <TextView
                android:id="@+id/fragment_custom_condition_notclick_tv_options"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanumsquarer"
                android:text="최신 등록순"
                android:textSize="12sp" />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="11.4dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/btn_align_triangle"/>
            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/line"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5.5dp">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/fragment_custom_condition_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        </android.support.v7.widget.RecyclerView>

    </ScrollView>

</LinearLayout>


</RelativeLayout>
