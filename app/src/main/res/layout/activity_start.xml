<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartActivity"
    android:orientation="vertical"
    android:layout_centerVertical="true"
    android:layout_centerInParent="true"
    android:background="@color/colorBackground">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorBackground"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/act_main_iv_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="12dp"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/act_main_tv_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/act_main_iv_logo"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="27dp"
            android:fontFamily="@font/nanumsquarer"
            android:text="당신에게 필요한 지원사업을 받아보세요:)"
            android:textSize="14sp" />


        <ImageView
            android:id="@+id/act_main_iv_create_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/act_main_tv_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12.2dp"
            android:src="@drawable/bt_createaccount"
            android:background="@null"/>

        <ImageView
            android:id="@+id/act_main_iv_experience"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/act_main_iv_create_account"
            android:layout_centerHorizontal="true"
            android:background="@null"
            android:layout_marginTop="12.2dp"
            android:src="@drawable/bt_experience" />

        <ImageButton
            android:id="@+id/act_main_iv_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/act_main_iv_experience"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="11.8dp"
            android:clickable="true"
            android:src="@drawable/bt_login" />

    </RelativeLayout>


</RelativeLayout>