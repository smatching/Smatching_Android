<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="55dp"
    android:layout_height="8dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/workthroughs_tab_first"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/selector_home_navi_first_icon"/>
    <ImageView
        android:id="@+id/workthroughs_tab_second"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/selector_home_navi_second_icon"/>
    <ImageView
        android:id="@+id/workthroughs_tab_third"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/selector_home_navi_first_icon"/>
</LinearLayout>

</RelativeLayout>