<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="40dp"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36dp"
                android:layout_marginBottom="7dp"
                android:textSize="14sp"
                android:textColor="#909090"
                android:lineSpacingExtra="-1sp"
                android:text="닉네임 (10자 이하)"
                android:fontFamily="@font/nanumsquareb"/>
            <EditText
                android:id="@+id/fragment_mypage_setting_memberinfo_et_nickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanumsquarer"
                android:layout_marginHorizontal="40dp"
                android:textSize="14sp"
                android:textColor="@color/colorText"
                android:lineSpacingExtra="15sp"
                android:background="@null"
                android:maxLength="10"
                android:inputType="text"
                />
            <ImageView
                android:layout_marginTop="8dp"
                android:layout_marginBottom="25dp"
                android:src="@drawable/line_horizon"
                android:layout_marginHorizontal="36dp"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:layout_marginLeft="36dp"
                android:fontFamily="@font/nanumsquareb"
                android:textSize="14sp"
                android:textColor="#909090"
                android:lineSpacingExtra="-1sp"
                android:text="이메일주소 (변경불가)"
                />
            <TextView
                android:id="@+id/fragment_mypage_setting_memberinfo_et_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:textSize="14sp"
                android:textColor="@color/colorText"
                android:lineSpacingExtra="2sp"
                android:fontFamily="@font/nanumsquarer"
                android:background="@null"
                />
            <ImageView
                android:layout_marginTop="8dp"
                android:src="@drawable/line_horizon"
                android:layout_marginHorizontal="36dp"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="36dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="25dp"
                android:scaleType="fitXY"
                android:src="@drawable/line_horizon" />

            <ImageView
                android:layout_marginTop="8dp"
                android:layout_marginBottom="25dp"
                android:src="@drawable/line_horizon"
                android:layout_marginHorizontal="36dp"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36dp"
                android:layout_marginBottom="7dp"
                android:textSize="14sp"
                android:textColor="#909090"
                android:lineSpacingExtra="2sp"
                android:text="기존 비밀번호"
                android:fontFamily="@font/nanumsquareb"
                />
            <EditText
                android:id="@+id/fragment_mypage_setting_memberinfo_et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:textSize="14sp"
                android:textColor="@color/colorText"
                android:lineSpacingExtra="2sp"
                android:inputType="textPassword"
                android:background="@null"
                />
            <ImageView
                android:layout_marginTop="8dp"
                android:src="@drawable/line_horizon"
                android:layout_marginHorizontal="36dp"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="36dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="25dp"
                android:scaleType="fitXY"
                android:src="@drawable/line_horizon" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:layout_marginLeft="36dp"
                android:textSize="14sp"
                android:textColor="#909090"
                android:lineSpacingExtra="2sp"
                android:fontFamily="@font/nanumsquareb"
                android:text="새 비밀번호 "
                />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                android:id="@+id/fragment_mypage_setting_memberinfo_tv_newPassword_hint"
                android:text="8~15자리 숫자, 영문자"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:textSize="14sp"
                android:textColor="@color/colorTextHint"
                android:background="@null"
                android:visibility="visible"
                android:fontFamily="@font/nanumsquarer"/>
            <EditText
                android:id="@+id/fragment_mypage_setting_memberinfo_et_new_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:textSize="14sp"
                android:textColor="@color/colorText"
                android:lineSpacingExtra="2sp"
                android:inputType="textPassword"
                android:background="@null"
                />
            </RelativeLayout>
            <ImageView
                android:layout_marginTop="8dp"
                android:src="@drawable/line_horizon"
                android:layout_marginHorizontal="36dp"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="36dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="25dp"
                android:scaleType="fitXY"
                android:src="@drawable/line_horizon" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="36dp"
                android:textSize="14sp"
                android:textColor="#909090"
                android:lineSpacingExtra="2sp"
                android:fontFamily="@font/nanumsquareb"
                android:text="새 비밀번호 재입력"
                />
            <EditText
                android:id="@+id/fragment_mypage_setting_memberinfo_et_new_password_check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:textSize="14sp"
                android:textColor="@color/colorText"
                android:lineSpacingExtra="2sp"
                android:background="@null"
                android:inputType="textPassword"
                />
            <ImageView
                android:layout_marginTop="8dp"
                android:src="@drawable/line_horizon"
                android:layout_marginHorizontal="36dp"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/fragment_mypage_setting_memberinfo_btn_save"
                    android:onClick="onClick"
                    android:src="@drawable/btn_save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    </ScrollView>
</RelativeLayout>