<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".WorkthroughsPagerActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/act_workthroughs_pager_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">
        <android.support.design.widget.TabLayout
            android:id="@+id/act_workthroughs_pager_tab"
            android:layout_width="wrap_content"
            android:layout_height="8dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="25dp">
        </android.support.design.widget.TabLayout>

        <TextView
            android:id="@+id/fragment_workthroughs_tv"
            android:layout_marginRight="20dp"
            android:layout_marginVertical="20dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#66474747"
            android:lineSpacingExtra="19sp"
            android:fontFamily="@font/nanumsquarer"
            android:text="건너뛰기"
            />
    </RelativeLayout>
</RelativeLayout>